<header>
  <a class="save">Save</a>
  <a class="delete">Delete</a>
</header>

<div class="content">
  <form>
    <input type="hidden" name="user" value="<%= @item.user %>" />
    <label>
      <span>Search term</span>
      <input type="text" name="term" value="<%= @item.term %>">
    </label>
  
    <label>
      <span>Synonyms</span>
      <textarea name="synonyms"><%= @item.synonyms %></textarea>
    </label>  
    
    <button>Save</button>
  </form>
</div>
